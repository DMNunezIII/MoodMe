<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dnunez.moodme.MoodSelection"
    tools:showIn="@layout/activity_mood_selection">

    <Button android:id="@+id/firstMood"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:text="Happy"
        android:layout_alignTop="@+id/thirdMood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="happyClicked"/>

    <Button android:id="@+id/fourthMood"
        android:layout_height="@dimen/size"
        android:layout_width="@dimen/size"
        android:text="Excited"
        android:layout_alignTop="@+id/fifthMood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|center_vertical" />

    <Button android:id="@+id/sixthMood"
        android:layout_height="@dimen/size"
        android:layout_width="@dimen/size"
        android:text="Lazy"
        android:layout_alignLeft="@+id/thirdMood"
        android:layout_alignStart="@+id/thirdMood"
        android:layout_gravity="right|center_vertical" />

    <Button android:id="@+id/thirdMood"
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:layout_alignParentRight="true"
        android:text="Angry"
        android:layout_gravity="center_horizontal|top" />

    <Button android:id="@+id/fifthMood"
        android:layout_height="@dimen/size"
        android:layout_width="@dimen/size"
        android:text="Relaxed"
        android:layout_gravity="center" />

    <Button android:id="@+id/seventhMood"
        android:layout_height="@dimen/size"
        android:layout_width="@dimen/size"
        android:text="Irritated"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/fourthMood"
        android:layout_toEndOf="@+id/fourthMood"
        android:layout_gravity="left|bottom" />

    <Button android:id="@+id/secondMood"
        android:layout_height="@dimen/size"
        android:layout_width="@dimen/size"
        android:text="Sad"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/fifthMood"
        android:layout_alignStart="@+id/fifthMood"
        android:layout_gravity="right|top" />

    <Button
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:text="Hyper"
        android:id="@+id/eigthMood"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:text="Enraged"
        android:id="@+id/ninthMood"
        android:layout_gravity="right|bottom" />


</FrameLayout>
