<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dnunez.moodme.SoulCryingQuestions"
    tools:showIn="@layout/activity_soul_crying_questions">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Shell Is Closed?"
        android:id="@+id/shell"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:onClick="shellClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/knowQuestion"
        android:id="@+id/know"
        android:layout_below="@id/shell"
        android:layout_marginTop="86dp"
        android:layout_centerHorizontal="true"
        android:onClick="knowClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feelingQuestion"
        android:id="@+id/feeling"
        android:layout_below="@id/know"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="feelingClicked" />
</RelativeLayout>
